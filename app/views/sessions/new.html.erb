
<article class="signup-form">
  <h1>Login</h1>
  <div class="login-mainbox">
    <%= form_tag '/login' do %>
    <div><%= text_field_tag :email, nil, {class: "input-field", placeholder: "Email"} %></div>
    <div><%= password_field_tag :password, nil, {class: "input-field", placeholder: "Password"} %></div>

    <%= submit_tag "Submit", class: "submit-button" %>
    <% end %>
  </div>
</article>